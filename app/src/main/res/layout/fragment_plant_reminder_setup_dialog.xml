<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PlantReminderSetupDialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="8">

        <Button
            android:id="@+id/button_done"
            android:layout_width="500dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Done"
            android:textColor="#F9F9F9" />

        <TextView
            android:id="@+id/textView_reminder_setup_hint"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:lines="2"
            android:text="1. Select the day you want to be reminded first."
            android:textColor="@android:color/secondary_text_light"
            android:textSize="14sp" />

        <CalendarView
            android:id="@+id/calendarView_reminder_setup"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="5" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingBottom="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_selected_date_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NEXT WATERING DATE:"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/textView_fertilizing_interval"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="WATERING INTERVAL:"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>

            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_firstDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select starting date" />

                <TextView
                    android:id="@+id/textView_interval"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select a second date" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>